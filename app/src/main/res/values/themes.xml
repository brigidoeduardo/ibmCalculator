<resources>
    <!-- Base application theme. -->
    <style name="Base.Theme.IbmCalculator" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Primary Brand Colour. -->
        <item name="colorPrimary">@color/primary_color</item>
        <item name="colorPrimaryVariant">@color/primary_dark_color</item>
        <item name="colorOnPrimary">@color/text_primary_light</item>
        <!-- Secondary Brand Colour. -->
        <item name="colorSecondary">@color/accent_color</item>
        <item name="colorSecondaryVariant">@color/accent_color_dark</item>
        <item name="colorOnSecondary">@color/text_primary_light</item>
        <!-- Status Bar Colour. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
    </style>

    <style name="Theme.IbmCalculator" parent="Base.Theme.IbmCalculator" />
</resources>